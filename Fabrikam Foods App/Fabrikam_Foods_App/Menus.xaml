                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Aspect="AspectFill"
                    Source="https://media.timeout.com/images/102421929/image.jpg" />
